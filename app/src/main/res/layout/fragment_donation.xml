<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    tools:context="com.camacuasoft.jazzfestivalapp.Fragments.DonationFragment">

    <TextView
        android:id="@+id/donation_intro_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/colaboration_text"
        android:textColor="@color/colorPrimaryText"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/donation_cbu_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_intro_text"
        android:layout_marginBottom="10dp"
        android:text="Transferencia bancaria al CBU: "
        android:textColor="@color/colorPrimaryText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/donation_cbu_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/donation_cbu_text"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:text="@string/cbu"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18dp" />

    <ImageButton
        android:id="@+id/donation_mp_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/donation_cbu_number"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:id="@+id/donation_pp_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/donation_mp_button"
        android:layout_marginBottom="10dp" />

</RelativeLayout>
