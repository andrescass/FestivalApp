<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/facebook_item_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:elevation="4dp"
    android:focusable="false"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:backgroundTint="@color/colorPrimaryLight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/facebook_item_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/facebook_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/facebook_item_picture"
            android:foregroundGravity="left"
            android:gravity="left"
            android:text="El Gato y la Caja"
            android:textSize="20dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorPrimaryText"/>

        <TextView
            android:id="@+id/facebook_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/facebook_item_picture"
            android:layout_toRightOf="@id/facebook_item_title"
            android:foregroundGravity="right"
            android:gravity="right"
            android:text="30/07/2017 13:30"
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/facebook_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/facebook_item_title"
            android:textColor="@color/colorPrimaryText"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>